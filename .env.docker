# Docker环境配置
STREAMDIFFUSION_HOST=0.0.0.0
STREAMDIFFUSION_PORT=8000
STREAMDIFFUSION_LOG_LEVEL=INFO

# GPU配置
STREAMDIFFUSION_GPU_ENABLED=true
STREAMDIFFUSION_DEVICE=cuda
STREAMDIFFUSION_DTYPE=float16

# 性能配置
STREAMDIFFUSION_MAX_BATCH_SIZE=4
STREAMDIFFUSION_QUEUE_SIZE=10
STREAMDIFFUSION_TIMEOUT=60

# 模型配置
STREAMDIFFUSION_MODEL_PATH=/app/models
STREAMDIFFUSION_LORA_PATH=/app/models/lora
STREAMDIFFUSION_CACHE_DIR=/app/cache

# 安全配置
STREAMDIFFUSION_CORS_ORIGINS=*
STREAMDIFFUSION_CORS_ALLOW_CREDENTIALS=true
STREAMDIFFUSION_CORS_ALLOW_METHODS=*
STREAMDIFFUSION_CORS_ALLOW_HEADERS=*

# 文件上传配置
STREAMDIFFUSION_MAX_UPLOAD_SIZE=10485760  # 10MB
STREAMDIFFUSION_UPLOAD_PATH=/app/uploads

# 数据库配置（可选）
STREAMDIFFUSION_DATABASE_URL=postgresql://artflow:artflow_password@artflow-db:5432/artflow

# Redis配置（可选）
STREAMDIFFUSION_REDIS_URL=redis://artflow-redis:6379/0

# 监控配置
STREAMDIFFUSION_ENABLE_METRICS=true
STREAMDIFFUSION_METRICS_PORT=9090

# Docker特定配置
PYTHONPATH=/app
DEBIAN_FRONTEND=noninteractive
NODE_ENV=production

# 前端配置
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# HTTPS配置（生产环境）
STREAMDIFFUSION_SSL_ENABLED=false